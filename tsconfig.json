{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],

    "allowJs": true,

    "skipLibCheck": true,

    "jsx": "preserve",

    "noEmit": true,

  
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,

    "plugins": [
      {
        "name": "next"
      }
    ],

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "next-env.d.ts",

   
    "**/*.ts",
    "**/*.tsx",

   
    "**/*.js",
    "**/*.jsx",

   
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
